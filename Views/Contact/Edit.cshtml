@model Contact
@{
    string title = ViewBag.Action + " Contact";
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="0">select a Category</option>
            @foreach (Category g in ViewBag.Categories)
            {
                <option value=@g.CategoryId>@g.Name</option>
            }
        </select>
    </div>

    <div class="mb-4">
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-dark">@ViewBag.Action</button>
        <a asp-controller="Home" asp-action="Index"
        class="btn btn-dark">Cancel</a>
    </div>
</form>
