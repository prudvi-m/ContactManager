@model Contact
@{
    string title = "Contact " + ViewBag.Action;
    ViewBag.Title = title;
}

<h2>@ViewBag.Title</h2>

<form asp-action="DetailEdit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">select a Category</option>
            @foreach (Category g in ViewBag.Categories)
            {
                <option value=@g.CategoryId>@g.Name</option>
            }
        </select>
    </div>

    <div class="mb-4">
        <input type="hidden" asp-for="ContactId" />
        <button type="submit" class="btn btn-dark">Edit</button>

        @* <a asp-controller="Contact" asp-route-id="ContactId" asp-action="DetailEdit"
            class="btn btn-dark">Edit</a> *@

        <a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactId" asp-route-slug="@Model.Slug" 
            class="btn btn-dark">Delete</a>
        <a asp-controller="Home" asp-action="Index" 
            class="btn btn-dark">Cancel</a>
    </div>
</form>
